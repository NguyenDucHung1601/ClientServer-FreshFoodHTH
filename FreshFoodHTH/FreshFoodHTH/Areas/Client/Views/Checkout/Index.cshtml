<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Chi tiết đơn hàng</h4>
            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="exampleInputEmail1"><b>Họ tên</b></label>
                                <input type="text" class="form-control" value=" @ViewBag.User.Ten" readonly>
                                <br />
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputEmail1"><b>Điện thoại</b></label>
                                <input type="text" class="form-control" value=" @ViewBag.User.DienThoai" required>
                                <br />
                            </div>
                            <div class="col-md-12">
                                <label for="exampleInputEmail1"><b>Email</b></label>
                                <input type="text" class="form-control" value=" @ViewBag.User.Email" required>
                                <br />
                            </div>
                            <div class="col-md-12">
                                <label for="exampleInputEmail1"><b>Địa chỉ</b></label>
                                <input type="text" class="form-control" value=" @ViewBag.User.DiaChi" required>
                                <br />
                            </div>
                            <div class="col-md-12"><br /></div>
                            <div class="col-md-6">
                                <label for="exampleInputEmail1"><b>Mã giảm giá</b></label>
                                <input type="text" class="form-control" name="magiamgia" placeholder="Nhập mã giảm giá (nếu có) ..." value="">
                                <br />
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputEmail1"><b>&nbsp;</b></label><br />
                                <button class="success" style="background-color: #7fad39;border:none; height:37px; width: 120px"><i class="fa fa-arrow-circle-o-right"></i>&nbsp; Áp dụng</button>
                                <br />
                            </div>
                            <div class="col-md-6" style="width:360px">
                                <label for="exampleInputEmail1"><b>Phương thức thanh toán</b></label><br />
                                @Html.DropDownList("IDPhuongThucThanhToan", (IEnumerable<SelectListItem>)ViewBag.PayWayList)
                                <br />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Hoá đơn</h4>
                            <div class="checkout__order__products">Sản phẩm <span>Thành tiền</span></div>
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li>@item.SanPham.Ten <span>@String.Format("{0:n0}", item.ThanhTien)</span></li>
                                }
                            </ul>

                            @*<div class="checkout__order__subtotal">Tiền hàng <span>@String.Format("{0:n0}", ViewBag.Bill.TienHang)</span></div>
                                <div class="checkout__order__subtotal">Tiền ship <span>@String.Format("{0:n0}", ViewBag.Bill.TienShip)</span></div>
                                <div class="checkout__order__subtotal">Tổng giảm <span>@String.Format("{0:n0}", ViewBag.Bill.TienGiam)</span></div>
                                <div class="checkout__order__total">Tổng Tiền <span>@String.Format("{0:n0}", ViewBag.Bill.TongTien)</span></div>*@
                            <div style="border-bottom: 1px solid #e1e1e1"><br /></div>
                            <ul>
                                <li style="color:black"><b>Tổng tiền hàng</b><span>@String.Format("{0:n0}", 1000000)</span></li>
                                <li style="color:black"><b>Phí vận chuyển</b><span>@String.Format("{0:n0}", 20000)</span></li>
                                <li style="color:black"><b>Tiền giảm</b><span>- @String.Format("{0:n0}", 20000)</span></li>
                                <li style="color:black"><b>Tổng tiền đơn hàng</b><span style="color:crimson">@String.Format("{0:n0}", 1000000)</span></li>
                            </ul>

                            <button type="submit" class="site-btn">Xác nhận</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->


