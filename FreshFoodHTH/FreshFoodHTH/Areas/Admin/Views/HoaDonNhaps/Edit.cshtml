@model FreshFoodHTH.Models.EF.HoaDonNhap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section header
{
    Hóa đơn nhập - Sửa hóa đơn nhập
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

