@model FreshFoodHTH.Models.EF.DonHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Đơn hàng - Thông tin đơn hàng
}
<div>
    <table>
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        Tên khách hàng:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NguoiDung.Ten)
                    </dd>

                    <dt>
                        Phương thức thanh toán:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PhuongThucThanhToan.TenPhuongThucThanhToan)
                    </dd>

                    <dt>
                        Trạng thái:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai.TenTrangThai)
                    </dd>

                    <dt>
                        Tiền hàng:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TienHang)
                    </dd>

                    <dt>
                        Tiền ship:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TienShip)
                    </dd>

                    <dt>
                        Tiền giảm:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TienGiam)
                    </dd>

                    <dt>
                        Tổng tiền:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TongTien)
                    </dd>

                    <dt>
                        Ngày cập nhật:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>

                    <dt>
                        Ghi chú:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GhiChu)
                    </dd>
                </dl>
            </td>
        </tr>
    </table>
    <br />
    <h4>
        <i class="fa fa-list-ol"></i>
        <b style="color:darkgreen">&nbsp;Chi tiết đơn hàng</b>
    </h4>
    @*(#@Model.IDDonHang)*@
    @Html.Action("IndexChiTietDonHang", new { @id = Model.IDDonHang })
</div>
<br />

<button type="button" class="btn btn-primary btn-admin">
    <a class="fa fa-edit"></a> &nbsp;
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.IDDonHang })
</button>
<button type="button" class="btn btn-warning btn-admin">
    <a class="fa fa-th-list"></a> &nbsp;
    @Html.ActionLink("Danh sách", "Index")
</button>