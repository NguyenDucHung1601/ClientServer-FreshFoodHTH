@model FreshFoodHTH.Models.EF.TrangThai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Trạng thái - Chỉnh sửa thông tin (#@Model.TenTrangThai)
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTrangThai)

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Ten</label>
                <input type="text" class="form-control" name="ten" placeholder="Nhập tên" value=" @Html.DisplayFor(model => model.TenTrangThai)">
            </div>
        </div>



        <button type="submit" class="btn btn-primary" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}
