@model FreshFoodHTH.Models.EF.NhaCungCap

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Hóa đơn nhập - Thông tin hóa đơn nhập
}

<div>
    <table>
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        Nhà cung cấp:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Ten)
                    </dd>

                    <dt>
                        Địa chỉ:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DiaChi)
                    </dd>

                    <dt>
                        Điện thoại:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DienThoai)
                    </dd>

                    <dt>
                        Ngày cập nhật:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>


                </dl>
            </td>
        </tr>
    </table>
</div>
<button type="button" class="btn btn-primary btn-admin">
    <a class="fa fa-edit"></a> &nbsp;
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.IDNhaCungCap })
</button>
<button type="button" class="btn btn-warning btn-admin">
    <a class="fa fa-th-list"></a> &nbsp;
    @Html.ActionLink("Danh sách", "Index")
</button>
