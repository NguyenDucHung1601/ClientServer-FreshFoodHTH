@model FreshFoodHTH.Models.EF.NhaCungCap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Nhà cung cấp - Chỉnh sửa thông tin (@Model.Ten )
}

@using (Html.BeginForm("Edit", "NhaCungCap", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDNhaCungCap)


        <table style="width:100%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tên nhà cung cấp</label>
                            <input type="text" class="form-control" name="ten" placeholder="Nhập tên nhà cung cấp ..." value=" @Html.DisplayFor(model => model.Ten)" style="width:370px" required>
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Địa chỉ</label>
                            <input type="text" class="form-control" name="diachi" placeholder="Nhập địa chỉ ..." value=" @Html.DisplayFor(model => model.DiaChi)" style="width:332px" required>
                        </div>
                    </div>
                    <br />
                </td>
                <td style="vertical-align:top">
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputFile">Hình ảnh nhà cung cấp</label>
                            <input type="file" id="hinhanh" name="hinhanh">
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Số điện thoại</label><br />
                            <input type="text" class="form-control" name="dienthoai" placeholder="Nhập số điện thoại ..." value=" @Html.DisplayFor(model => model.DienThoai)" required>
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            
            


        <br />

        <button type="submit" class="btn btn-primary btn-admin" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning btn-admin" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}
