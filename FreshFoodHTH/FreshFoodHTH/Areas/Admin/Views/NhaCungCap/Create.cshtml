@model FreshFoodHTH.Models.EF.NhaCungCap

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Nhà cung cấp  - Thêm nhà cung cấp
}



@using (Html.BeginForm("Create", "NhaCungCap", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table style="width:100%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <tr>
                <td colspan="2">
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tên nhà cung cấp</label>
                            <input type="text" class="form-control" name="ten" placeholder="Nhập tên nhà cung cấp ..." value=" @Html.DisplayFor(model => model.Ten)" style="width:370px" required>
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Địa Chỉ</label><br />
                            <input type="text" class="form-control" name="diachi" placeholder="Nhập địa chỉ ..." value=" @Html.DisplayFor(model => model.DiaChi)" style="width:370px" required>
                        </div>
                    </div>
                    <br />
                </td>
                </tr>
            <tr>
                <td style="vertical-align:top">
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputFile">Hình ảnh nhà cung cấp</label>
                            <input type="file" id="hinhanh" name="hinhanh" required>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Số điện thoại</label><br />
                            <input type="text" class="form-control" name="dienthoai" placeholder="Nhập đơn vị tính ..." value=" @Html.DisplayFor(model => model.DienThoai)" required>
                        </div>
                    </div>
                    <br />
                </td>
               
            </tr>
            
        </table>

        <br />

        <button type="submit" class="btn btn-primary" style="width:110px">
            <i class="fa fa-save"></i> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <i class="fa fa-th-list"></i> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}